{
  "name": "emojito",
  "version": "1.0.2",
  "description": "一款轻量级的 emoji 工具包",
  "author": "Gavin Lin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ChatGavin/emojito.git"
  },
  "homepage": "https://emojito.gavin.chat",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.5.2",
  "keywords": [
    "emoji",
    "emojito"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "web:dev": "turbo run dev --filter=@emojito/web",
    "web:build": "turbo run build --filter=@emojito/web",
    "core:build": "turbo run build --filter=@emojito/core",
    "changeset": "changeset",
    "version": "changeset version && rm -rf .changeset/*.md",
    "release": "turbo run build --filter=@emojito/core --filter=@emojito/web && changeset publish --filter=@emojito/core",
    "bump": "pnpm changeset && pnpm version",
    "bump:auto": "pnpm version patch && pnpm -r version $(node -p \"require('./package.json').version\")"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.2",
    "turbo": "^2.4.4"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
